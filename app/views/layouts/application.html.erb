<!DOCTYPE html>
<html>
  <head>
    <title>Joker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'%>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <span class="my-0 mr-md-auto font-weight-bold"><%= link_to "Joker" , home_path %>></span>
    <nav class="my-2 my-md-0 mr-md-3">
      <span class="p-2 text-dark"><%= link_to "PLAY" , start_game_path %>></span>
    </nav>
    <span class="btn btn-outline-primary" href="#"><%= link_to "SIGN UP" , new_user_path %>></span>
  </div>
    <%= yield %>
  </body>
</html>
